/* Body */
body {font-family: 'Trebuchet MS', Arial, sans-serif;}

/* Titles */
h1 {color:#00345c;}

/* Header */
div.header_center {text-align:center;}

/* Footer */
div.footer_center {text-align:center;}

/* Pages */

/*Home Page*/
div.top_options {margin-top:20px;margin-bottom:10px;}
div.bottom_options {margin-top:10px;margin-bottom:20px;}
div.home_option {height:260px;text-align:center;line-height:20px;}
div.home_option a{display:block;background:#7895a3;color:#ffffff;text-decoration:none;padding:80px;}
div.home_option a:active {background:#00345c;}
div.home_option a:hover {color:#325d64;}

/*Nurse Page*/
div.nurse_option {height:50px;text-align:left;font-size:40px;cursor:pointer;display:block;background:#7895a3;color:#ffffff;text-decoration:none;margin:10px;}
div.nurse_sibling {height:40px;width: 600px;text-align:left;font-size:30px;display:block;background:#325d64;color:#ffffff;text-decoration:none;margin:10px;}
div.hidden {display:none;}
